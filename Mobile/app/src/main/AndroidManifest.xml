<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemoKotlin"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".movie.MovieAddActivity"
            android:exported="false"
            android:label="@string/title_activity_movie_add"
            android:theme="@style/Theme.DemoKotlin" />
        <activity
            android:name=".NavHost"
            android:exported="false"
            android:label="@string/title_activity_nav_host"
            android:theme="@style/Theme.DemoKotlin" />
        <activity
            android:name=".movie.MovieIdActivity"
            android:exported="false"
            android:label="@string/title_activity_movie_id"
            android:theme="@style/Theme.DemoKotlin" />
        <activity
            android:name=".movie.MovieActivity"
            android:exported="false"
            android:label="@string/title_activity_movie"
            android:theme="@style/Theme.DemoKotlin" />
        <activity
            android:name=".movie.MovieEditActivity"
            android:exported="false"
            android:label="@string/title_activity_movie_edit"
            android:theme="@style/Theme.DemoKotlin" />
